rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isDropboxPath() {
      let path = resource.name;
      return path.matches('^faculty_.+\\/repo_.+\\/dropbox_.+');
    }

    match /{allPaths=**} {
      allow read, write: if isLoggedIn() && isDropboxPath();
    }
  }
}

function isLoggedIn() {
  return request.auth != null;
}
